<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Madimi+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer">
    <title>Real Time Pizza</title>
    <link rel="icon" href="../../js/favicon.ico" type="image/x-icon">
</head>

<body>
    {{>nav}}
    {{!-- add to cart item --}}
    {{#if session.cart.totalPrice}}

    <div class="order-section d-flex flex-column adjust ">
        <div class="d-flex align-items-center p-2">
            <img class="cart-black" src="img/cart-black.png" alt="">
            <p class="order-summary m-0">Order Summary</p>
        </div>
        <div class="d-flex flex-column justify-content-between">
            <hr>

            {{#each session.cart.item as |i|}}
            <div class="order-items p-4 d-flex justify-content-between align-items-center">
                <div class="name-section d-flex align-items-center">
                    <div class="cart-order-pizza-img">
                        <img class="order-pizza" src="img/{{i.items.image}}" alt="">
                    </div>
                    <div class="pizza-nameSize d-flex flex-column">
                        <p class="m-0">{{i.items.name}}</p>
                        <small>{{i.items.size}}</small>
                    </div>
                </div>
                <div class=" d-flex align-items-center quantity-controls">
                    <button class="cartButton" onclick="decrementFun('{{i.items._id}}')" style="padding: 8px 10px;">-</button>
                    <input type="hidden" class="hiddenInput" name="pizza" value="{{i.items._id}}">

                    {{!-- <form action="/decrement-cart" method="POST">
                        <input type="hidden" class="hiddenInput" name="pizza" value="{{i.items._id}}">
                        <button type="submit" class=" decrementBtn cartButton">-</button>

                    </form> --}}

                    <span id="{{i.items._id}}-quantity" style="margin: 0px 10px;">{{i.qty}}Pcs</span>
                    {{!-- <button class="incrementBtn btn">+</button> --}}
                    {{!-- <form action="/increment-cart" method="POST"> --}}
                        {{!-- <input type="hidden" name="pizza" value="{{i.items._id}}"> --}}
                        <input type="hidden"  name="pizza" value="{{i.items._id}}">
                        <button type="submit" class=" incrementBtn cartButton" onclick="incrementFun('{{i.items._id}}')">+</button>

                    {{!-- </form> --}}

                </div>

                <b id="{{i.items._id}}-amount" class="amount">₹{{multiply i.qty i.items.price}} </b>

                {{!-- add delete button --}}
                <form action="/delete-cart" method="POST">
                    <input type="hidden" name="pizza" value="{{i.items._id}}">
                    <button  class=" deleteButon" onclick="deleteFun('{{i.items._id}}')"><i class="fa-solid fa-trash-can"></i></button>
                </form>
            </div>

            {{!-- <button id="orderTableBody">click</button> --}}

            {{/each}}
            <hr>
        </div>
        <div style="margin-top:2.5rem;">
            {{!-- if user exist --}}
            {{!-- <form action="/order" method="POST"> --}}
                {{#if user}}
                <div class=" d-flex  flex-column" style="border: 1px solid  #00000052; padding:20px 20px">
                    <div>
                        <p class="order-summary m-0">Cart Total</p>
                    </div>
                    <hr style="margin: 20px 0px; border-top: 1px solid  #00000052;">
                    <div class="d-flex justify-content-between">
                        <p>Items Subtotal</p>
                        <span id="totalPrice">₹{{session.cart.totalPrice}}</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p>Shipping Cost</p>
                        <span>₹50</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p style="font-weight: 700;">Order Total</p>
                        <span id="addTotal"  style="font-weight: 700;">₹{{add session.cart.totalPrice 50}}</span>
                    </div>
                    <hr style="margin: 20px 0px; border-top: 1px solid  #00000052;">
                    <form action="/customer/orderPlace" method="GET" style="margin: auto;">
                        {{!-- <input type="hidden" name="pizza" value="{{session.cart}}"> --}}
                        <button id="buttons" type="submit" class="btn float-center">PROCEED TO CHECKOUT</button>
                    </form>
                </div>
                {{!-- if user does not exist --}}

                {{else}}
                <button id="buttons" type="submit" class="btn float-right"><a href="/login" style=" color: white">Login
                        to
                        continue</a></button>
                {{/if}}
        </div>

    </div>
    {{else}}
    {{!-- empty cart --}}
    <div class="empty-cart d-flex align-items-center flex-column adjust">
        <div class="d-flex align-items-center flex-column emptycart-section">
            <h1 class="px-5 empty-cart-header">CART EMPTY☹️</h1>
            <p>You probably haven't order a pizza yet.
                <br>
                To order a Pizza go to the main Page.
            </p>
        </div>
        <img src="/img/empty-cart.png" alt="">
        <button class="cart-btn btn"><a href="/#menu-container">Go Back</a></button>
    </div>
    {{/if}}
    {{>footer}}
</body>
<script src="../../js/app.js"></script>

</html>